{% extends "nunjucks/templates/main.njk" %}

{% block pageTitle %}Login{% endblock %}

{% block content %}

<div>
    <div class="santa-wrapper"></div>
    <form action="/" method="POST">
        <div class="christmas-form">
            <fieldset>
                <legend class="christmas-legend">Login</legend>
                <div>
                    <label for="name">Name</label>
                    <input id="name" name="name" type="text" placeholder="Enter your name">
                </div>
                <div>
                    <label for="password">Password</label>
                    <input id="password" name="password" type="password" placeholder="Enter your password">
                </div>
                <input type="hidden" name="_csrf" value="{{ _csrf }}">
                <input class="christmas-button-1" type="submit" value="Send to Santa">
            </fieldset>
        </div>
    </form>
</div>

{% endblock %}

